<%- include("../partials/header") %>

<div class="container">    
        <h1 style="text-align: center;">Edit <%=campground.name%> Campground</h1>
        
        <div style="width: 30%; margin: 25px auto;">
       
        <form action="/campgrounds/<%=campground._id%>?_method=PUT" method="POST">                
            <div class="form-group">
                <!-- <label for="name">Name</label> -->
                <input type="text" class="form-control" id="campground[name]" name="campground[name]" placeholder="Camp name" value="<%=campground.name%>">
            </div>
            <div class="form-group">
                <!-- <label for="name">Name</label> -->
                <input type="text" class="form-control" id="campground[image]" name="campground[image]" placeholder="Image URL" value="<%=campground.image%>">
            </div>
            <div class="form-group">
                <!-- <label for="name">Name</label> -->
                <input type="text" class="form-control" id="campground[description]" name="campground[description]" placeholder="description" value="<%=campground.description%>">
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary btn-block">Submit</button>
            </div>
        </form>
        <a href="/campgrounds">Go Back</a>
</div>
    
<%- include("../partials/footer") %>